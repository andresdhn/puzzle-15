{
  "name": "puzzle-15",
  "version": "1.0.0",
  "description": "15 puzzle is a sliding puzzle that consists of a frame of numbered square tiles in random order with one tile missing",
  "author": "Andres Hernandez <hernandez.andres.d@gmail.com>",
  "license": "ISC",
  "main": "index.js",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "scripts": {
    "dev": "npm-run-all -s sass:build -p babel sass:watch",
    "babel": "babel -w src/js -d public/js",
    "sass:build": "node-sass src/scss -o public/css",
    "sass:watch": "node-sass -w src/scss -o public/css"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "node-sass": "^4.13.0"
  }
}
